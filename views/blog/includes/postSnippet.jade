if (post.image)
		.post-image
			img(src='/posts/#{post.image}')
section
	div
		h1.title
			a(href=post.url)
				= post.title
		span.date #{post.date.getDate()}.#{post.date.getMonth()+1}.#{post.date.getFullYear()}
		div.hashtags
			- each tag in post.tags
				a.hashtag(href=tagUrl(tag))
					=tag

		div.post.content
			!= post.preview