extends layout

block body
	div.container
		div.row
			div.span12
				div.navbar
					div.navbar-inner
						div.container
							a.brand Champagne
							div#nav-collapse01.nav-collapse.collapse
								ul.nav
									li 
										a(href='/admin/') Websites
									li.active
										a(href='/admin/elasticsearch/') Elastic Search
		div.row
			div.span12
				h3	#{status.cluster_name}
				ul
					each node in status.nodes
						li= node.name
						li= node.indices.docs.count

				a.btn.btn-mini.btn-danger.mlm(href='/admin/elasticsearch/reindex/')
					i(style='font-size:11px').fui-trash
					|	Reindex
				
												
						
	script(src='/js/ui/jquery-1.8.3.min.js')
	script(src='/js/ui/jquery-ui-1.10.3.custom.min.js')
	script(src='/js/ui/jquery.ui.touch-punch.min.js')
	script(src='/js/ui/bootstrap.min.js')
	script(src='/js/ui/bootstrap-select.js')
	script(src='/js/ui/bootstrap-switch.js')
	script(src='/js/ui/flatui-checkbox.js')
	script(src='/js/ui/flatui-radio.js')
	script(src='/js/ui/jquery.tagsinput.js')
	script(src='/js/ui/jquery.placeholder.js')
	script(src='/js/ui/jquery.stacktable.js')
	script(src='/js/admin.js')

